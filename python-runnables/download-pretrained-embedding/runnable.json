{
    "meta": {
        "label": "Pre-trained Embeddings",
        "description": "Downloads pre-trained word embeddings. Available models are: Word2vec, GloVe, fastText and ELMo.",
        "icon": "icon-cloud-download"
    },
    "impersonate": true,
    "permissions": [
        "WRITE_CONF"
    ],
    "resultType": "HTML",
    "resultLabel": "model download output",
    "extension": "txt",
    "mimeType": "text/plain",

    "params": [
        {
            "name": "embedding_model",
            "label": "Embedding Model",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "Word2vec",
                    "value": "word2vec"
                },
                {
                    "label": "FastText",
                    "value": "fasttext"
                },
                {
                    "label": "Glove",
                    "value": "glove"
                },
                {
                    "label": "Universal Sentence Encoder",
                    "value": "use"
                },
                {
                    "label": "Transformers",
                    "value": "tranformers"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'word2vec'",
            "name": "language_word2vec",
            "label": "Language",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "English",
                    "value": "english"
                },
                {
                    "label": "Dutch",
                    "value": "dutch"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'fasttext'",
            "name": "language_fasttext",
            "label": "Language",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "English",
                    "value": "english"
                },
                {
                    "label": "Arabic",
                    "value": "arabic"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'glove'",
            "name": "language_glove",
            "label": "Language",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "English",
                    "value": "english"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'elmo'",
            "name": "language_elmo",
            "label": "Language",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "English",
                    "value": "english"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'use'",
            "name": "language_use",
            "label": "Language",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "Multilingual",
                    "value": "multilingual"
                },
                {
                    "label": "English",
                    "value": "english"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'tranformers'",
            "name": "transformer_architecture",
            "label": "Transformer Architecture",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "Bert",
                    "value": "bert"
                },
                {
                    "label": "DistilBERT",
                    "value": "distilbert"
                },
                {
                    "label": "GPT-2",
                    "value": "gpt2"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'tranformers' && model.transformer_architecture == 'bert'",
            "name": "language_tranformer_bert",
            "label": "Language",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "Multilingual",
                    "value": "multilingual"
                },
                {
                    "label": "English",
                    "value": "english"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'tranformers' && model.transformer_architecture == 'distilbert'",
            "name": "language_tranformer_distilbert",
            "label": "Language",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "English",
                    "value": "english"
                },
                {
                    "label": "German",
                    "value": "german"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'tranformers' && model.transformer_architecture == 'bert' && model.language_tranformer_bert == 'multilingual'",
            "name": "language_tranformer_bert_multilingual",
            "label": "Shortcut name",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "bert-base-multilingual-uncased",
                    "value": "bert-base-multilingual-uncased"
                },
                {
                    "label": "bert-base-multilingual-cased",
                    "value": "bert-base-multilingual-cased"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'tranformers' && model.transformer_architecture == 'bert' && model.language_tranformer_bert == 'english'",
            "name": "language_tranformer_bert_english",
            "label": "Shortcut name",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "bert-base-cased",
                    "value": "bert-base-cased"
                },
                {
                    "label": "bert-base-uncased",
                    "value": "bert-base-uncased"
                }
            ]
        },

        {
            "visibilityCondition":"model.embedding_model == 'tranformers' && model.transformer_architecture == 'distilbert' && model.language_tranformer_bert == 'english'",
            "name": "language_tranformer_distilbert_english",
            "label": "Shortcut name",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "label": "distilbert-base-cased",
                    "value": "distilbert-base-cased"
                },
                {
                    "label": "distilbert-base-uncased",
                    "value": "distilbert-base-uncased"
                }
            ]
        },

        {
            "name": "outputName",
            "label": "Output folder name",
            "type": "STRING",
            "description": "Use a different folder for each downloaded embeddings.",
            "mandatory": true
        },
        {
            "name": "advanced_settings",
            "label": "Advanced Settings",
            "description": "To set proxies.",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "visibilityCondition": "model.advanced_settings",
            "type": "PRESET",
            "name": "proxy_config",
            "label": "Proxy configuration",
            "parameterSetId": "custom_proxy_config"
        }
    ]
}